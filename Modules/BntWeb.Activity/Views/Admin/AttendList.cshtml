@using System.Web.Optimization
@{
    ViewBag.Title = ActivityModule.DisplayName;
    ViewBag.SubTitle = "活动参与人员";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model BntWeb.Activity.Models.Activity
<style>
    .dataTable th.sorting_disabled {
        color: #707070;
    }
</style>
<input type="hidden" id="ActivityId" name="ActivityId" value="@Model.Id" />
<div class="row">
    <div class="col-xs-12">
        <h3>【@Model.Title】 活动报名人员列表</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="ActivityTypeTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="col-xs-2">
                            姓名
                        </th>
                        <th class="col-xs-2">
                            电话
                        </th>
                        <th class="col-xs-1">
                            报名时间
                        </th>
                        <th class="col-xs-1">
                            参与状态
                        </th>
                        <th class="col-xs-1">
                            支付状态
                        </th>
                        <th class="col-xs-1">
                            集齐状态
                        </th>
                        <th class="col-xs-2">
                            兑换码
                        </th>
                        <th class="col-xs-2">
                            兑奖状态
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/js/admin/jquery-datatable")
    <script type="text/javascript">
        //获取URL上参数
        $.getUrlParam = $._getUrlParam = function (name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return unescape(r[2]);
            return null;
        }
        var id = $.getUrlParam('applyId');
        var url_loadPage = "@Url.Action("GetAttendList", "Admin", new {area = ActivityModule.Area})?applyId =" + id;
        var url_prize = "@Url.Action("CashAPrize","Admin",new {area=ActivityModule.Area})";
    </script>
    @Scripts.Render("~/js/admin/activitys/attend/list")
}
