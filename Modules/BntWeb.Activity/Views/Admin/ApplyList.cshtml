@using System.Web.Optimization
@{
    ViewBag.Title = ActivityModule.DisplayName;
    ViewBag.SubTitle = "活动报名人员";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model BntWeb.Activity.Models.Activity
<style>
    .dataTable th.sorting_disabled {
        color: #707070;
    }
</style>
<input type="hidden" id="ActivityId" name="ActivityId" value="@Model.Id" />
<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-3 control-label no-padding-right" for="NikeName"> 姓名 </label>
            <div class="col-sm-8 col-md-9">
                <div class="clearfix">
                    <input type="text" id="NikeName" name="NikeName" placeholder="姓名" value="" class="col-md-12" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-3 control-label no-padding-right" for="Phone"> 手机 </label>
            <div class="col-sm-8 col-md-9">
                <div class="clearfix">
                    <input type="text" id="Phone" name="Phone" placeholder="手机" value="" class="col-md-12" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-3 control-label no-padding-right" for="RedeemCode"> 兑换码 </label>
            <div class="col-sm-8 col-md-9">
                <div class="clearfix">
                    <input type="text" id="RedeemCode" name="RedeemCode" placeholder="兑换码" value="" class="col-md-12" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-3 control-label no-padding-right" for="ApplyType"> 申请类型 </label>
            <div class="col-sm-8 col-md-9">
                <div class="clearfix">
                    <select id="ApplyType" name="ApplyType">
                        <option value="">所有</option>
                        <option value="0">发起</option>
                        <option value="1">参与</option>
                        <option value="2">补齐</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-1 col-md-2 col-sm-3 text-center query-form-item">
            <button class="btn btn-sm btn-info" type="submit" id="QueryButton">
                <i class="icon-search bigger-110"></i>
                查询
            </button>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-xs-12">
        <h3>【@Model.Title】 活动报名人员列表</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="ActivityTypeTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="col-xs-2">
                            姓名
                        </th>
                        <th class="col-xs-2">
                            电话
                        </th>
                        <th class="col-xs-1">
                            报名时间
                        </th>
                        <th class="col-xs-1">
                            参与状态
                        </th>
                        <th class="col-xs-1">
                            支付状态
                        </th>
                        <th class="col-xs-1">
                            集齐状态
                        </th>
                        <th class="col-xs-2">
                            兑换码
                        </th>
                        <th class="col-xs-2">
                            兑奖状态
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/js/admin/jquery-datatable")
    <script type="text/javascript">
        var url_loadPage = "@Url.Action("GetApplyList", "Admin", new {area = ActivityModule.Area, activityId = Model.Id })";
        var url_prize = "@Url.Action("CashAPrize","Admin",new {area=ActivityModule.Area})";
        var url_attendList = "@Url.Action("AttendList","Admin",new {area=ActivityModule.Area})";
    </script>
    @Scripts.Render("~/js/admin/activitys/apply/list")
}
